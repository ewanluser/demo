# Environment Variables Template
# Copy this file to .env in the project root and fill in your values

# Database Configuration
DATABASE_URL=sqlite:///./fastapi_app.db
# For PostgreSQL: DATABASE_URL=postgresql://user:password@localhost:5432/dbname
# For MySQL: DATABASE_URL=mysql+pymysql://user:password@localhost:3306/dbname

# Application Settings
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=true
LOG_LEVEL=info

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME=FastAPI User Management API
VERSION=1.0.0

# CORS Settings
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# Security Settings
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# Testing
TEST_DATABASE_URL=sqlite:///./test.db

# Production Settings (uncomment and configure for production)
# ENVIRONMENT=production
# SENTRY_DSN=your-sentry-dsn
# REDIS_URL=redis://localhost:6379
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-email-password 